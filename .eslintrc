{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "mocha": true,
    "jest": true
  },
  "plugins": [
    "react",
    "import",
    "babel"
  ],
  "rules": {
    "react/prop-types": 0,
    "babel/semi": 0,
    "no-return-assign": 0,
    "no-multi-spaces": ["error", { "exceptions": { "ImportDeclaration": true, "Property": true } }],
    "camelcase": 0,
    "template-curly-spacing" : "off",
    "indent": ["error", 2, {
      "ignoredNodes": ["TemplateLiteral"]
    }]
  },
  "globals": {
    "google": 1,
    "NProgress": 1,
    "jest": 1
  }
}
